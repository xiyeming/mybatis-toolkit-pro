{
  "name": "mybatis-toolkit-pro",
  "displayName": "MyBatis Toolkit Pro",
  "description": "Professional MyBatis development toolkit",
  "version": "1.0.0",
  "publisher": "developer",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onLanguage:java",
    "workspaceContains:**/*.xml"
  ],
  "main": "./dist/extension.js",
  "repository": "https://github.com/test/test1231.git",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mybatis-explorer",
          "title": "MyBatis",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "mybatis-explorer": [
        {
          "id": "mybatisToolkit.databaseExplorer",
          "name": "Database Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "mybatisToolkit.goToMapper",
        "title": "Go to Mapper Interface"
      },
      {
        "command": "mybatisToolkit.goToXml",
        "title": "Go to MyBatis XML"
      },
      {
        "command": "mybatisToolkit.addConnection",
        "title": "Add Connection",
        "icon": "$(add)"
      },
      {
        "command": "mybatisToolkit.connect",
        "title": "Connect",
        "icon": "$(plug)"
      },
      {
        "command": "mybatisToolkit.disconnect",
        "title": "Disconnect",
        "icon": "$(plug)"
      },
      {
        "command": "mybatisToolkit.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "mybatisToolkit.removeConnection",
        "title": "Remove",
        "icon": "$(trash)"
      },
      {
        "command": "mybatisToolkit.openTableSchema",
        "title": "Open Table Schema"
      },
      {
        "command": "mybatisToolkit.generateCode",
        "title": "Generate Code (Entity/Mapper/XML)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mybatisToolkit.addConnection",
          "when": "view == mybatisToolkit.databaseExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mybatisToolkit.connect",
          "when": "view == mybatisToolkit.databaseExplorer && viewItem == connection && !mybatisToolkit.connected",
          "group": "inline"
        },
        {
          "command": "mybatisToolkit.disconnect",
          "when": "view == mybatisToolkit.databaseExplorer && viewItem == connection && mybatisToolkit.connected",
          "group": "inline"
        },
        {
          "command": "mybatisToolkit.generateCode",
          "when": "view == mybatisToolkit.databaseExplorer && viewItem == table",
          "group": "1_modification"
        },
        {
          "command": "mybatisToolkit.removeConnection",
          "when": "view == mybatisToolkit.databaseExplorer && viewItem == connection",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "MyBatis Toolkit Pro",
      "properties": {
        "mybatisToolkit.formatting.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Indentation size for SQL formatting."
        },
        "mybatisToolkit.navigation.exclude": {
          "type": "array",
          "default": [
            "target",
            "build",
            "bin",
            "out",
            "dist",
            "node_modules",
            ".git"
          ],
          "description": "Folders to exclude from indexing."
        },
        "mybatisToolkit.highlights.tableNameColor": {
          "type": "string",
          "format": "color-hex",
          "default": "#FFAB70",
          "description": "Color for SQL Table names (e.g. FROM table)."
        },
        "mybatisToolkit.highlights.keywordColor": {
          "type": "string",
          "format": "color-hex",
          "default": "#C586C0",
          "description": "Color for SQL Keywords (SELECT, WHERE, etc.)."
        },
        "mybatisToolkit.highlights.functionColor": {
          "type": "string",
          "format": "color-hex",
          "default": "#DCDCAA",
          "description": "Color for SQL Functions (COUNT, MAX, etc.)."
        },
        "mybatisToolkit.highlights.paramColor": {
          "type": "string",
          "format": "color-hex",
          "default": "#9CDCFE",
          "description": "Color for MyBatis Parameters (#{...})."
        },
        "mybatisToolkit.connections": {
          "type": "array",
          "default": [],
          "description": "List of saved database connections.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "host": {
                "type": "string"
              },
              "port": {
                "type": "number"
              },
              "user": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "database": {
                "type": "string"
              }
            }
          }
        },
        "mybatisToolkit.database.host": {
          "type": "string",
          "default": "localhost",
          "description": "Database Host"
        },
        "mybatisToolkit.database.port": {
          "type": "number",
          "default": 3306,
          "description": "Database Port"
        },
        "mybatisToolkit.database.user": {
          "type": "string",
          "default": "root",
          "description": "Database User"
        },
        "mybatisToolkit.database.password": {
          "type": "string",
          "default": "",
          "description": "Database Password"
        },
        "mybatisToolkit.database.database": {
          "type": "string",
          "default": "",
          "description": "Database Name"
        },
        "mybatisToolkit.database.connectionLimit": {
          "type": "number",
          "default": 10,
          "description": "Database Connection Pool Limit"
        },
        "mybatisToolkit.validation.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable SQL Table Validation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@dbcode/vscode-api": "^1.1.1",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.0.0",
    "vscode": "npm:@types/vscode@^1.90.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "mysql2": "^3.15.3"
  }
}