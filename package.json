{
  "name": "mybatis-toolkit-pro",
  "displayName": "MyBatis Toolkit Pro",
  "description": "专业的 MyBatis 开发工具包",
  "version": "1.0.0",
  "publisher": "xiyeming",
  "license": "MIT",
  "keywords": [
    "mybatis",
    "sql",
    "xml",
    "java",
    "vscode",
    "database",
    "code-generation"
  ],
  "homepage": "https://github.com/xiyeming/mybatis-toolkit-pro#readme",
  "bugs": {
    "url": "https://github.com/xiyeming/mybatis-toolkit-pro/issues"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml",
    "onLanguage:java",
    "workspaceContains:**/*.xml"
  ],
  "main": "./dist/extension.js",
  "repository": "https://github.com/xiyeming/mybatis-toolkit-pro.git",
  "icon": "images/mybatis.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mybatis-explorer",
          "title": "MyBatis",
          "icon": "images/mybatis.png"
        }
      ]
    },
    "views": {
      "mybatis-explorer": [
        {
          "id": "mybatisToolkit.databaseExplorer",
          "name": "数据库浏览器",
          "icon": "images/mybatis.png"
        }
      ]
    },
    "commands": [
      {
        "command": "mybatisToolkit.goToMapper",
        "title": "跳转到 Mapper 接口"
      },
      {
        "command": "mybatisToolkit.goToXml",
        "title": "跳转到 MyBatis XML"
      },
      {
        "command": "mybatisToolkit.addConnection",
        "title": "添加连接",
        "icon": "$(add)"
      },
      {
        "command": "mybatisToolkit.connect",
        "title": "连接",
        "icon": "$(plug)"
      },
      {
        "command": "mybatisToolkit.disconnect",
        "title": "断开连接",
        "icon": "$(plug)"
      },
      {
        "command": "mybatisToolkit.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "mybatisToolkit.removeConnection",
        "title": "移除",
        "icon": "$(trash)"
      },
      {
        "command": "mybatisToolkit.openTableSchema",
        "title": "打开表结构"
      },
      {
        "command": "mybatisToolkit.generateCode",
        "title": "生成代码 (Entity/Mapper/XML)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mybatisToolkit.addConnection",
          "when": "view == mybatisToolkit.databaseExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mybatisToolkit.connect",
          "when": "view == mybatisToolkit.databaseExplorer && viewItem == connection && !mybatisToolkit.connected",
          "group": "inline"
        },
        {
          "command": "mybatisToolkit.disconnect",
          "when": "view == mybatisToolkit.databaseExplorer && viewItem == connection && mybatisToolkit.connected",
          "group": "inline"
        },
        {
          "command": "mybatisToolkit.generateCode",
          "when": "view == mybatisToolkit.databaseExplorer && viewItem == table",
          "group": "1_modification"
        },
        {
          "command": "mybatisToolkit.removeConnection",
          "when": "view == mybatisToolkit.databaseExplorer && viewItem == connection",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "MyBatis Toolkit Pro",
      "properties": {
        "mybatisToolkit.formatting.indentSize": {
          "type": "number",
          "default": 2,
          "description": "SQL 格式化的缩进大小。"
        },
        "mybatisToolkit.navigation.exclude": {
          "type": "array",
          "default": [
            "target",
            "build",
            "bin",
            "out",
            "dist",
            "node_modules",
            ".git"
          ],
          "description": "索引时排除的文件夹。"
        },
        "mybatisToolkit.highlights.tableNameColor": {
          "type": "string",
          "format": "color-hex",
          "default": "#FFAB70",
          "description": "SQL 表名颜色 (例如 FROM table)。"
        },
        "mybatisToolkit.highlights.keywordColor": {
          "type": "string",
          "format": "color-hex",
          "default": "#C586C0",
          "description": "SQL 关键字颜色 (SELECT, WHERE 等)。"
        },
        "mybatisToolkit.highlights.functionColor": {
          "type": "string",
          "format": "color-hex",
          "default": "#DCDCAA",
          "description": "SQL 函数颜色 (COUNT, MAX 等)。"
        },
        "mybatisToolkit.highlights.paramColor": {
          "type": "string",
          "format": "color-hex",
          "default": "#9CDCFE",
          "description": "MyBatis 参数颜色 (#{...})。"
        },
        "mybatisToolkit.connections": {
          "type": "array",
          "default": [],
          "description": "保存的数据库连接列表。",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "host": {
                "type": "string"
              },
              "port": {
                "type": "number"
              },
              "user": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "database": {
                "type": "string"
              }
            }
          }
        },
        "mybatisToolkit.database.host": {
          "type": "string",
          "default": "localhost",
          "description": "数据库主机"
        },
        "mybatisToolkit.database.port": {
          "type": "number",
          "default": 3306,
          "description": "数据库端口"
        },
        "mybatisToolkit.database.user": {
          "type": "string",
          "default": "root",
          "description": "数据库用户名"
        },
        "mybatisToolkit.database.password": {
          "type": "string",
          "default": "",
          "description": "数据库密码"
        },
        "mybatisToolkit.database.database": {
          "type": "string",
          "default": "",
          "description": "数据库名称"
        },
        "mybatisToolkit.database.connectionLimit": {
          "type": "number",
          "default": 10,
          "description": "数据库连接池限制"
        },
        "mybatisToolkit.validation.enable": {
          "type": "boolean",
          "default": true,
          "description": "启用 SQL 表验证"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@dbcode/vscode-api": "^1.1.1",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.0.0",
    "vscode": "npm:@types/vscode@^1.90.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "mysql2": "^3.15.3"
  }
}